@model IEnumerable<MeetingScheduler.Models.GuestResponse>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Responses</title>
        <link rel="stylesheet" href="/css/style.css" />
    </head>
    <body>
        <h2>Voici la liste de personnes attendus à la séance</h2>
        <table>
            <thead>
                <tr><th>Nom</th><th>Email</th><th>Téléphone</th></tr>
            </thead>
            <tbody>
                @foreach (MeetingScheduler.Models.GuestResponse r in Model!){
                    <tr>
                        <td>@r.Nom</td>
                        <td>@r.Email</td>
                        <td>@r.Telephone</td>
                    </tr>
                }
            </tbody>
        </table>
    </body>
</html>